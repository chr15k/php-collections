{
    "name": "chr15k/php-collections",
    "type": "library",
    "version": "0.1.0",
    "authors": [
        {
            "name": "Chris Keller",
            "email": "ctk8501@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "rector/rector": "^2.1",
        "phpstan/phpstan": "^2.1",
        "laravel/pint": "^1.24",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Chr15k\\Collection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "pint",
        "refactor": "rector",
        "tidy": [
            "@lint",
            "@refactor",
            "@lint"
        ],
        "test:refactor": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --memory-limit=2G",
        "test:unit": "pest --colors=always --coverage --exactly=100",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
